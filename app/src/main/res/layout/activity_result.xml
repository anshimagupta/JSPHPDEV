<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary_dark_material_light"
    tools:context="com.example.anshimag.mortgagecalculator.ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monthlyPaymentText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Monthly Payment"
        android:textColor="@color/abc_input_method_navigation_guard"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/monthlyPayment"
        android:layout_below="@+id/monthlyPaymentText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalPaymentText"
        android:layout_centerHorizontal="true"
        android:text="Total Payment"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/monthlyPayment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/totalPayment"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/totalPaymentText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payOffDateText"
        android:layout_centerHorizontal="true"
        android:text="Pay Off Date"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/totalPayment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/payOffDate"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/payOffDateText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/allMortgages"
        android:text="All Mortgages"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/payOffDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/allMortgagesText"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/allMortgages" />

    </RelativeLayout>
</ScrollView>
